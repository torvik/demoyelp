<%= form_for(@restaurant, :html => {multipart: true }) do |f| %>
  <% if @restaurant.errors.any? %>
    <div class="alert alert-warning alert-dismissible">
       <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h4>

      <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name , class: "form-control" , placeholder: "Churrascaria Leste"%>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: "form-control" , placeholder: "Rua Teste, 128 Rio de Janeiro-RJ" %>
  </div>
  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class: "form-control" , placeholder: "(021) 9999-9999" %>
  </div>
  <div class="form-group">
    <%= f.label :website %><br>
    <%= f.text_field :website , class: "form-control" , placeholder: "http://www.churrascarialeste.com.br" %>
  </div>
    <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image , class: "form-control"%>
  </div>

  <div class="actions">
    <%= f.submit  class: "btn btn-primary"%>
  </div>
<% end %>
